{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignorePaths": [
    "spec/integrations"
  ],
  "github-actions": {
    "enabled": true,
    "pinDigests": true
  },
  "packageRules": [
    {
      "matchCategories": [
        "ruby"
      ],
      "enabled": true
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "minimumReleaseAge": "7 days"
    },
    {
      "matchManagers": [
        "bundler"
      ],
      "minimumReleaseAge": "7 days"
    }
  ]
}
