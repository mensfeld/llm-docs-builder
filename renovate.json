{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "minimumReleaseAge": "7 days",
  "includePaths": [
    ".ruby-version",
    "Gemfile",
    "llm-docs-builder.gemspec",
    ".github/workflows/**",
    "Dockerfile*",
    "package.json"
  ],
  "ignorePaths": [
    "spec/integrations"
  ],
  "packageRules": [
    {
      "matchCategories": [
        "ruby"
      ],
      "enabled": true
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "pinDigests": true
    },
    {
      "description": "Group ruby/setup-ruby action with ruby version updates",
      "matchPackageNames": [
        "ruby/setup-ruby",
        "ruby"
      ],
      "groupName": "ruby setup"
    }
  ]
}
